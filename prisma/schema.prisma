generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Job {
  jobId       String @id @default(uuid()) 
  company     String
  position    String
  location    String?
  country     String?
  salary      Int
  isAvailable Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  userId    String @id @default(uuid())
  email     String @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  companyId String @id @default(uuid())
  name String
  description String?
  website String?
}
